<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Set the baseline logging level for the application to WARN -->
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- Example: If you need to see INFO level for a specific package -->
    <!-- <logger name="com.example.mypackage" level="INFO" /> -->

</configuration>